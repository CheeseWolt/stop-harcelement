    <div class="col-12"><br></div>
    <div class="col-4">
        <a href="{{path('alert_index')}}"><button class="btn btn-primary">Consulter les signalements</button></a>
    </div>
    <div class="col-4 text-center">
        <a href="{{path('user_new')}}"><button class="btn btn-primary">Inscrire un membre</button></a>
    </div>
    <div class="col-4 text-right">
        <a href="{{path('dashboard')}}"><button class="btn btn-primary">Consulter les stats</button></a>
    </div>
    <div><br></div>
</div>