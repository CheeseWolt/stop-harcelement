{% extends 'base.html.twig' %}

{% block title %}Gestion des rôles{% endblock %}

{% block body %}
<div class="container">
    <br>
    <div class="row">
        <div class="col-12 text-center">
            <h1>Gestion des rôles</h1>
            <br>
        </div>
        <div class="col-12 text-center">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Rôle</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for role in roles %}
                    <tr>
                        <td>{{ role.name }}</td>
                        <td>
                            <a href="{{ path('role_show', {'id': role.id}) }}"><button class="btn btn-primary">Afficher</button></a>
                            <a href="{{ path('role_edit', {'id': role.id}) }}"><button class="btn btn-success">Editer</button></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">Aucun enregistrement trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <a href="{{ path('role_new') }}"><button class="btn btn-success">Ajouter un rôle</button></a>
        </div>
    </div>
    <br>
</div>
{% endblock %}
