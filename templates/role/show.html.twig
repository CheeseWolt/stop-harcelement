{% extends 'base.html.twig' %}

{% block title %}Role{% endblock %}

{% block body %}
<div class="container">
    <br>
    <div class="row">
        <div class="col-12 text-center">
            <h1>Rôle</h1>
            <br>
        </div>
    </div>
    <div class="row">
        <div class="col-12 text-center">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ role.id }}</td>
                    </tr>
                    <tr>
                        <th>Rôle</th>
                        <td>{{ role.name }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-12 text-right">
            <a href="{{ path('role_edit', {'id': role.id}) }}"><button class="btn btn-success">Editer</button></a>
        </div>
        <div class="col-12"><hr></div>
        <div class="col-6">
            <a href="{{ path('role_index') }}"><button class="btn btn-primary">retour aux rôles</button></a>
        </div>
        <div class="col-6 text-right">
            {{ include('role/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
