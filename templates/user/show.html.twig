{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class="container">
    <br>
    <div class="row">
        <div class="col-12 text-center">
            <h1>User</h1>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-12 text-center">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th>Pseudo</th>
                        <td>{{ user.userName }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ user.lastName }}</td>
                    </tr>
                    <tr>
                        <th>Prenom</th>
                        <td>{{ user.firstName }}</td>
                    </tr>
                    <tr>
                        <th>Date de naissance</th>
                        <td>{{ user.birthDate ? user.birthDate|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Téléphone</th>
                        <td>{{ user.phone }}</td>
                    </tr>
                    <tr>
                        <th>Adresse</th>
                        <td>{{ user.address }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-12 text-right">
            <a href="{{ path('user_edit', {'id': user.id}) }}"><button class="btn btn-success">Editer</button></a>
        </div>
        <div class="col-12"><hr></div>
        <div class="col-6">
            <a href="{{ path('user_index') }}"><button class="btn btn-primary">retour aux utilisateurs</button></a>
        </div>
        <div class="col-6 text-right">
            {{ include('user/_delete_form.html.twig') }}
        </div>
    </div>
</div>




{% endblock %}
