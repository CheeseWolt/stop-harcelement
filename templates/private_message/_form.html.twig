{{ form_start(form) }}
<div class="theme-light card">
<div class="card-header theme-d2">
    <h5 class="card-title ">{{app.user.userName}} {{ alert.isAnonym ? '(Votre nom n\'apparaitra pas car vous avez choisit l\'anonymat)' }}</h5>
</div>
    <p class="card-text text-theme">
        {{ form_label(form.content,'') }}
        {{ form_row(form.content,{"attr":{'class':'form-control'}})}}
    </p>
    <button class="btn theme-action">{{ button_label|default('Envoyer') }}</button>
</div>
{{ form_end(form) }}
