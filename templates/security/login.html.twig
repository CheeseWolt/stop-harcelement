{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="container theme-container">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="py-auto text-center">
                    <h2>Tu es déjà connecté.</h2>
                    <a href="{{ path('homepage') }}" class="btn btn-lg theme-action">Retour à l'accueil</a>
                </div>
            {% else %}

                <br>
                <div class="row">
                    <div class="col-12">
                        <h1 class="text-theme">Connexion</h1>
                    </div>
                </div>
                <br>
                <div class="row form-group text-theme">
                    <div class="col-md-3">
                        <label for="inputUsername">Nom d'utilisateur</label>
                    </div>
                    <div class="col-md-9">
                        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" placeholder="Nom d'utilisateur" required autofocus>
                    </div>
                </div>
                <div class="row form-group text-theme">
                    <div class="col-md-3">
                        <label for="inputPassword">Mot de passe</label>
                    </div>
                    <div class="col-md-9">
                        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe" required>
                    </div>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <input type="hidden" name="_target_path" value="{{ path('profil_index') }}"/>
                {#
                                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                                See https://symfony.com/doc/current/security/remember_me.html
                        
                                <div class="checkbox mb-3">
                                    <label>
                                        <input type="checkbox" name="_remember_me"> Remember me
                                    </label>
                                </div>
                            #}
                            
                <button class="btn btn-lg theme-action" type="submit">
                    Connexion
                </button>
            {% endif %}
        </form>
    </div>
{% endblock %}
