{% extends 'base.html.twig' %}

{% block title %}Liste des signalements
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1>Liste des signalements</h1>
            </div>
            <div class="col-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Type de harcelement</th>
                            <th>Dates des signalements</th>
                            <th>Dates des événements</th>
                            <th>Lieu des faits</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for alert in alerts %}
                            <tr>
                                <td>
                                    {% for type in alert.alertStyle %}
                                        {{ type.name }}
                                    {% endfor %}
                                </td>
                                <td>{{ alert.alertDate ? alert.alertDate|date('Y-m-d H:i:s') : '' }}</td>
                                <td>{{ alert.eventDate ? alert.eventDate|date('d-m-Y') : '' }} {{ alert.eventTime ? alert.eventTime|date('H:i:s') : '' }}</td>
                                <td>
                                    {{ alert.location.name }}
                                </td>
                                <td>
                                    <a href="{{ path('alert_show', {'id': alert.id}) }}" class="btn btn-primary">Afficher</a>
                                    {# <a href="{{ path('alert_edit', {'id': alert.id}) }}" class="btn btn-success">Editer</a> #}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="8">Pas d'enregistrement trouvé</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        {% if is_granted('ROLE_ADMIN') %}
        <div class="row">
            <div class="col-12">
                <a href="{{ path('alert_new') }}">
                    <button class="btn btn-success">Ajouter une alerte</button>
                </a>
            </div>
        </div>
        {% endif %}
    </div>
{% endblock %}
