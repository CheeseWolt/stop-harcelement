
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{{ form_start(form) }}
<div class="row">
    <div class="col-6">
        <div class="form-group">
            {{form_row(form.eventDate)}}
        </div>
    </div>
    <div class="col-6">
        <div class="form-group">
            {{form_row(form.eventTime)}}
        </div>
    </div>
</div>
<hr>
<div class="row">
    <div class="col-sm-6 col-xs-12">
        {{form_row(form.isAnonym, {'attr':{'class':'form-check-inline'}})}}
    </div>
    <div class="col-sm-6 col-xs-12">
        {{form_row(form.status, {'attr':{'class':'form-check-inline'}})}}
    </div>
</div>
<hr>
<div class="row">
    <div class="col-12">
        {{form_row(form.content)}}
    </div>
</div>
<div class="row">
    <div class="col-12">
        {{form_row(form.location)}}
    </div>
</div>
<div class="row">
    <div class="col-12 imgcenter">
        {{form_row(form.alertStyle, {'attr':{'class':'form-check form-check-inline alertStyleCheckboxDisplay justify-content-around'}})}}
    </div>
</div>

<div class="row">
    <div class="col-sm-6 col-xs-12 form-group btn-container text-sm-left text-xs-center">
        <a class="btn theme-action" href="{{ path('profil_index') }}">Retour au profil</a>
    </div>
    <div class="col-sm-6 col-xs-12 form-group btn-container text-sm-right text-xs-center">
        <button type="submit" class="btn theme-action">{{ button_label|default('Enregistrer') }}</button>
    </div>
</div>
{{ form_end(form) }}


<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/locales/bootstrap-datepicker.fr.min.js"></script>
<script>
    $(document).ready(function () {
        $('.js-datepicker').datepicker({language: 'fr-FR'});
    });
</script>
