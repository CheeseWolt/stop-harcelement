<div class="login-box fixed-height">
    {{ form_start(form) }}
    <div class="form-group">
    
        <div class="form-group">
            {{form_row(form.eventDate, {'label':'Date de l\'événement :', 'attr':{'class':'form-control control-label', 'autofocus':'true'}})}}
        </div>
        <div class="form-group">
            {{form_row(form.content, {'label':'Contenu :', 'attr':{'class':'form-control control-label', 'placeholder':'Faite votre signalement', 'autofocus':'true'}})}}
        </div>
        <button type="submit" class="btn btn-success">{{ button_label|default('Enregistrer') }}</button>
    </div>
    {{ form_end(form) }}
</div>