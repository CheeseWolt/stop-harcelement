{% extends 'base.html.twig' %}

{% block title %}Alert{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>Alert</h1>
        </div>
        <div class="col-12">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ alert.id }}</td>
                    </tr>
                    <tr>
                        <th>AlertDate</th>
                        <td>{{ alert.alertDate ? alert.alertDate|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>EventDate</th>
                        <td>{{ alert.eventDate ? alert.eventDate|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>IpAddress</th>
                        <td>{{ alert.ipAddress }}</td>
                    </tr>
                    <tr>
                        <th>Content</th>
                        <td>{{ alert.content }}</td>
                    </tr>
                    <tr>
                        <th>StartSupportDate</th>
                        <td>{{ alert.startSupportDate ? alert.startSupportDate|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>EndSupportDate</th>
                        <td>{{ alert.endSupportDate ? alert.endSupportDate|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-12 text-right">
            <a href="{{ path('alert_edit', {'id': alert.id}) }}"><button class="btn btn-success">Editer</button></a>
        </div>
        <div class="col-12"><hr></div>
        <div class="col-6">
            <a href="{{ path('alert_index') }}"><button class="btn btn-primary">retour aux alertes</button></a>
        </div>
        <div class="col-6 text-right">
            {{ include('alert/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
