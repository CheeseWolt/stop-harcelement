{% extends 'base.html.twig' %}

{% block title %}Alert
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1>Alert</h1>
            </div>
            <div class="col-12">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Date du signalement</th>
                            <td>{{ alert.alertDate ? alert.alertDate|date('d-m-Y H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Date des faits</th>
                            <td>{{ alert.eventDate ? alert.eventDate|date('d-m-Y H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>IpAddress</th>
                            <td>{{ alert.ipAddress }}</td>
                        </tr>
                        <tr>
                            <th>Déscription</th>
                            <td>{{ alert.content }}</td>
                        </tr>
                        <tr>
                            <th>Pris en charge par</th>
                            <td>{{ alert.alertManager.userName }}</td>
                        </tr>
                        <tr>
                            <th>Début de prise en charge</th>
                            <td>{{ alert.startSupportDate ? alert.startSupportDate|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Fin de prise en charge</th>
                            <td>{{ alert.endSupportDate ? alert.endSupportDate|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row ">
            <div class="col-12 text-right">
                <a href="{{ path('alert_edit', {'id': alert.id}) }}" class="btn btn-success">
                    Editer
                </a>
            </div>
        </div>
        <div class="col-12"><hr></div>
        <div class="d-flex flex-row justify-content-between">
            <div class="justify-content-between">
                <a href="{{ path('alert_index') }}" class="btn btn-primary">
                    Retour aux alertes
                </a>
            </div>
            <div class="justify-content-between">
                <a href="{{ path('alert_manage',{'id':alert.id}) }}" class="btn btn-primary">
                    Prendre en charge
                </a>
            </div>
            <div class="justify-content-between">
                {{ include('alert/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
