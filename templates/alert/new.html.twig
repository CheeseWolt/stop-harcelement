{% extends 'base.html.twig' %}

{% block title %}Nouveau signalement{% endblock %}

{% block body %}
<div class="container theme-l5 container-alert">
        <div class="row">
            <div class="col-12 titlealert">
                <h1 style="text-align:center ">Faites votre signalement :</h1>
            </div>
        </div>
        <div class="form-alert">
            <div class="row">
                <div class="col-12">
                    {{ include('alert/_form.html.twig') }}
                </div>
            </div>
        </div>
</div>

<style>
    .titlealert {
        color: #23b5d3;
        padding-top: 15px; 
    }
    .form-alert {
        padding: 30px;
        width: 80%;
        margin: auto;
        box-sizing: border-box;
        margin-bottom: 20px;

    }
    .container-alert {
        border: 1px solid grey;
        border-radius: 4px;
        margin: 20px auto 80px;
        padding: 0;
        font-family: sans-serif;
    }
    .btn-alert{
        background-color: #115b69;
        color: white;
    }
    .container-alert hr{
        box-shadow: 2px 1px 2px rgba(9, 2, 90, 0.2);
    }
</style>
{% endblock %}