{% extends 'base.html.twig' %}

{% block title %}Gestion des niveaux scolaires{% endblock %}

{% block body %}
<div class="container">
    <br>
    <div class="row">
        <div class="col-12 text-center">
            <h1>Gestion des niveaux scolaires</h1>
            <br>
        </div>
        <div class="col-12 text-center">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Niveau scolaire</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for class_level in class_levels %}
                    <tr>
                        <td>{{ class_level.name }}</td>
                        <td>
                            <a href="{{ path('class_level_show', {'id': class_level.id}) }}"><button class="btn btn-primary">Afficher</button></a>
                            <a href="{{ path('class_level_edit', {'id': class_level.id}) }}"><button class="btn btn-success">Editer</button></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <a href="{{ path('class_level_new') }}"><button class="btn btn-success">Ajouter un niveau scolaire</button></a>
        </div>
    </div>
</div>
{% endblock %}
