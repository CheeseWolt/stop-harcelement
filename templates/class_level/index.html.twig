{% extends 'base.html.twig' %}

{% block title %}Gestion des niveaux scolaires{% endblock %}

{% block body %}
<div class="container theme-container">
    <br>
    <div class="row">
        <div class="col-12 text-center">
            <h1 class="text-theme">Gestion des niveaux scolaires</h1>
            <br>
        </div>
        <div class="col-12 text-center">
            <table class="table table-striped">
                <thead class="theme-d3">
                    <tr>
                        <th>Niveau scolaire</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for class_level in class_levels %}
                    <tr>
                        <td>{{ class_level.name }}</td>
                        <td>
                            <a href="{{ path('class_level_show', {'id': class_level.id}) }}" class="btn theme-action">Afficher</a>
                            <a href="{{ path('class_level_edit', {'id': class_level.id}) }}" class="btn theme-action">Editer</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <a href="{{ path('class_level_new') }}" class="btn theme-action">Ajouter un niveau scolaire</a>
        </div>
    </div>
</div>
{% endblock %}
