{% extends 'base.html.twig' %}

{% block title %}ClassLevel index{% endblock %}

{% block body %}
    <h1>ClassLevel index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for class_level in class_levels %}
            <tr>
                <td>{{ class_level.id }}</td>
                <td>{{ class_level.name }}</td>
                <td>
                    <a href="{{ path('class_level_show', {'id': class_level.id}) }}">show</a>
                    <a href="{{ path('class_level_edit', {'id': class_level.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('class_level_new') }}">Create new</a>
{% endblock %}
