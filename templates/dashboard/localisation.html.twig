<script>
    // Build the chart
    Highcharts.chart('localisation', {
        chart: {
            plotBackgroundColor: null,
            plotBorderWidth: null,
            plotShadow: false,
            type: 'pie'
        },
        title: {
            text: 'Localisation des incidents'
        },
        tooltip: {
            pointFormat: '<b>{point.percentage:.1f}%</b>'
        },
        plotOptions: {
            pie: {
                allowPointSelect: true,
                cursor: 'pointer',
                dataLabels: {
                    enabled: false
                },
                showInLegend: true
            }
        },
        series: [
            {
                name: 'Brands',
                colorByPoint: true,
                data: [
                    {% if places is defined %}
                        {% for p in places %}
                            {
                                name: '{{ p.lieu | e("js") | raw }}',
                                y: {{ p.nbAlert }},
                                sliced: true,
                                selected: true
                            },
                        {% endfor %}
                    {% endif %}
                ]
            }
        ]
    });
</script>
