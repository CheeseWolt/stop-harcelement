{% extends 'base.html.twig' %}

{% block title %}ClassName{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>ClassName</h1>
        </div>
        <div class="col-12">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ class_name.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ class_name.name }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-12 text-right">
            <a href="{{ path('class_name_edit', {'id': class_name.id}) }}"><button class="btn btn-success">Editer</button></a>
        </div>
        <div class="col-12"><hr></div>
        <div class="col-6">
            <a href="{{ path('class_name_index') }}"><button class="btn btn-primary">retour aux classes</button></a>
        </div>
        <div class="col-6 text-right">
            {{ include('class_name/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
