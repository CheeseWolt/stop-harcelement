{% extends 'base.html.twig' %}

{% block title %}Gestion des classes{% endblock %}

{% block body %}
<div class="container">
    <br>
    <div class="row">
        <div class="col-12 text-center">
            <h1>Gestion des classes</h1>
            <br>
        </div>
        <div class="col-12 text-center">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Niveau</th>
                        <th>Nom</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for class_name in class_names %}
                    <tr>
                        <td>{{ class_name.classLevel.name }}</td>
                        <td>{{ class_name.name }}</td>
                        <td>
                            <a href="{{ path('class_name_show', {'id': class_name.id}) }}"><button class="btn btn-primary">Afficher</button></a>
                            <a href="{{ path('class_name_edit', {'id': class_name.id}) }}"><button class="btn btn-success">Editer</button></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <a href="{{ path('class_name_new') }}"><button class="btn btn-success">Ajouter une classe</button></a>
        </div>
    </div>
</div>
{% endblock %}
