{% extends 'base.html.twig' %}

{% block title %}Gestion des types d'alerte{% endblock %}

{% block body %}
<div class="container">
    <br>
    <div class="row">
        <div class="col-12 text-center">
            <h1>Gestion des types d'alerte</h1>
            <br>
        </div>
        <div class="col-12 text-center">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Type d'alerte</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for alert_style in alert_styles %}
                    <tr>
                        <td>{{ alert_style.name }}</td>
                        <td>
                            <a href="{{ path('alert_style_show', {'id': alert_style.id}) }}"><button class="btn btn-primary">Afficher</button></a>
                            <a href="{{ path('alert_style_edit', {'id': alert_style.id}) }}"><button class="btn btn-success">Editer</button></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <a href="{{ path('alert_style_new') }}"><button class="btn btn-success">Ajouter un type</button></a>
        </div>
    </div>
</div>
{% endblock %}
